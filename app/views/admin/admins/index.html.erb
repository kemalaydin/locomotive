<%= link_to  "Partners", admin_partners_path() %>
<%= link_to  "Activities", admin_activities_path() %>
<%= link_to  "People", admin_people_path() %>

<br><br><br>
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    Son İşlemler
                    <%= link_to  "Hepsini Gör", admin_activities_path(), class: 'badge badge-primary', style: 'float:right;' %>
                </h5>
                <p class="card-text">
                    <table class="table table-hover">
                        <thead>
                            <th style="padding: 2px">İşlemi Gerçekleştiren</th>
                            <th style="padding: 2px; text-align:center">Tipi</th>
                            <th style="padding: 2px; text-align:center">Tarih</th>
                        </thead>
                        <% @activities.each do |activity| %>
                            <tr style="padding: 0px;">
                                <td style="padding: 2px"><%= activity.users.type.name %> <%= activity.users.type.surname %> <small>( <%= activity.card.id %> )</small></td>
                                <td style="padding: 2px; text-align:center">
                                    <span class="
                                        <% if(activity.activity_type == "exit") %>
                                            badge badge-danger
                                        <% elsif(activity.activity_type == "pending") %>
                                            badge badge-warning
                                        <% else %>
                                            badge badge-success
                                        <% end %>
                                    ">
                                    <%= activity.activity_type %>
                                    </span>
                                </td>
                                <td style="padding: 2px; text-align:center"><small><%= activity.updated_at.strftime("%d.%m.%Y %H:%m") %></small></td>
                                
                            </tr>
                        <% end %>
                    </table>
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    Partnerler
                    <%= link_to  "Hepsini Gör", admin_partners_path(), class: 'badge badge-primary', style: 'float:right;' %>
                </h5>
                <p class="card-text">
                    <table class="table table-hover">
                        <thead>
                            <th style="padding: 2px">Partner Adı</th>
                            <th style="padding: 2px">Tipi</th>
                            <th style="padding: 2px"></th>
                        </thead>
                        <% @partners.each do |partner| %>
                            <tr style="padding: 0px;">
                                <td style="padding: 2px;"><%= partner.title %></td>
                                <td style="padding: 2px;"><%= partner.partner_type %></td>
                                <td style="padding: 2px;">
                                    <%= link_to  "İncele", admin_partner_path(partner), class: 'badge badge-info' %>
                                </td>
                            </tr>
                        <% end %>
                    </table>
                </p>
            </div>
        </div>
    </div> 
</div>
<div class="clearfix"></div><br>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Onay Bekleyen Kullanıcılar</h5>
                <table class="table table-hover table-bordered">
                    <thead>
                        <th>Adı Soyadı</th>
                        <th>Telefon</th>
                        <th>İş</th>
                        <th style="text-align:center">Cinsiyet</th>
                        <th style="text-align:center">Yaş</th>
                        <th style="width: 222px"></th>
                    </thead>
                    <% @users.each do |user| %>
                        <tr style="padding: 0px;">
                            <td><%= user.type.name %> <%= user.type.surname %></td>
                            <td><%= user.type.phone %></td>
                            <td><%= user.type.job %></td>
                            <td style="text-align:center"><%= user.type.gender %></td>
                            <td style="text-align:center"><%= user.type.age %></td>
                            <td>
                                <%= link_to  "Detay", admin_person_path(user), class: 'btn btn-info btn-sm' %>
                                <%= link_to  "Onayla", admin_person_confirm_path(user), class: 'btn btn-success btn-sm' %>
                                <%= link_to  "Reddet", admin_person_reject_path(user), class: 'btn btn-danger btn-sm' %>
                            </td>
                        </tr>
                    <% end %>
                </table>
            </div>
        </div>
    </div>
</div>